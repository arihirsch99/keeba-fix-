extends layout-base

block navbar
  ul.nav.pull-right
    li.dropdown(data-dropdown='dropdown')
      a#sort-dropdown.dropdown-toggle(href='#', target='_self', data-toggle="dropdown")
        | Options
        b.caret
      ul.dropdown-menu
        li
          a#toggle-archived(href="#", target='_self') Show archived
        li
          a#toggle-details(href="#", target='_self') Show details
        li.divider
        li
          a#nickname(href="#", target='_self')
            i.icon-user
            |  Nickname
        li
          a#shortcuts(href="#", target='_self')
            i.icon-list-alt
            |  Shortcuts
        li
          a#force-refresh(href="#", target='_self')
            i.icon-refresh
            |  Refresh
        li.divider
        li
          a#logout(target='_self', href='/logout', data-bypass)
            i.icon-off
            |  Log out

block scripts
  // Rather than changing all of the homework HTML links to 
     `_blank` with a regex (which would be pretty messy), I 
     cheat by defaulting to `_blank` and special-casing the 
     site's legitamite, same-page links with `_self`. 
  base(target='_blank')

  // Libraries
  script(src='/socket.io/socket.io.js')
  script(src='/js/lib/moment.js')
  script(src='/js/lib/keymaster.js')
  script(src='/js/lib/underscore.js')
  script(src='/js/lib/backbone.js')
  script(src='/js/lib/backbone-relational.js')
  script(src='/js/lib/backbone-query.js')
  script(src='/js/lib/backbone-iobind.js')
  script(src='/js/lib/backbone-iosync.js')
  script(src='/js/lib/handlebars.runtime.js')
  script(src='/js/lib/bootstrap-datepicker.js')
  script(src='/js/templates.min.js')
  include modals