extends layout-base

block title
  | Feedback

block content
  .container
    .row
      .span12
        section
          .page-header
            img.block-icon(src="/img/glyph/chat.png")
            h1 Feedback
              small.byline Brutal honestly in 5000 characters or less.
          each feedback in feedbacks
            - if (feedbacks.indexOf(feedback) % 2 === 1) // Odd
              blockquote(style="border-left: 5px solid hsl(216, 100%, 71%)")
                pre=feedback.message
                small(style="color:black") #{feedback._id}
            - else // Even
              blockquote(style="border-left: 5px solid hsl(0, 0%, 71%)")
                pre=feedback.message
                small(style="color:black") #{feedback._id}